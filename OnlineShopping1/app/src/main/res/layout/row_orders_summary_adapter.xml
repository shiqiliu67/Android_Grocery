<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_order_date_text"
        android:text="Order Date"
        android:layout_below="@+id/toolbar"
        android:textSize="18dp"
        android:textStyle="normal"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_order_date"
        android:text="2021/04/28"
        android:layout_below="@+id/text_view_order_date_text"
        android:textSize="22dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_order_item_text"
        android:text="Item"
        android:layout_below="@+id/text_view_order_date"
        android:textSize="18dp"
        android:textStyle="normal"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_order_item"
        android:text="Product list"
        android:layout_below="@+id/text_view_order_item_text"
        android:textSize="18dp"
        android:textStyle="normal"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_order_amount_text"
        android:text="Amount:"
        android:layout_below="@+id/text_view_order_item"
        android:textSize="18dp"
        android:textStyle="normal"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_order_amount"
        android:text="Price"
        android:layout_below="@+id/text_view_order_amount_text"
        android:textSize="18dp"
        android:textStyle="normal"/>
    <View
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:background="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_view_order_amount"
        android:id="@+id/view_line"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:id="@+id/text_view_order_status"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_line"
        android:layout_marginRight="20dp"
        android:textSize="16dp"
        android:textColor="@color/red"
        />
</RelativeLayout>
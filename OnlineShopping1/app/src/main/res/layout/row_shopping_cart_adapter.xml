<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image_view_cart"
        />
    <TextView
        android:id="@+id/text_view_product_name_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_cart"
        android:layout_toLeftOf="@id/image_view_delete_cart"
        android:text="Name"
        android:textSize="26dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_product_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_cart"
        android:layout_alignParentBottom="true"
        android:text="Price"
        android:textSize="22dp"
        android:textStyle="normal"/>

    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_minus_cart"
        android:src="@drawable/ic_baseline_remove_24"

        android:layout_toLeftOf="@id/text_view_show_unit_cart"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/text_view_show_unit_cart"
        android:layout_toLeftOf="@id/image_view_add_cart"
        android:text="1"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        />
    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_add_cart"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/image_view_delete_cart"
        android:src="@drawable/ic_baseline_highlight_off_24"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
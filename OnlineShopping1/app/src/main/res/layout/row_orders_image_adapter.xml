<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image_view_order_fragment"
        />
    <TextView
        android:id="@+id/text_view_order_product_name_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_order_fragment"
        android:text="Name"
        android:textSize="26dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text_view_order_product_quantity_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_order_fragment"
        android:layout_below="@id/text_view_order_product_name_fragment"
        android:text="Quantity"
        android:layout_marginTop="15dp"
        android:textSize="22dp"
        />

    <TextView
        android:id="@+id/text_view_order_product_price_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_order_fragment"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text_view_order_product_quantity_fragment"
        android:text="Price"
        android:textSize="22dp"
        android:textStyle="normal"/>

</RelativeLayout>
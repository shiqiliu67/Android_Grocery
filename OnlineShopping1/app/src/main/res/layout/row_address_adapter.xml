<androidx.cardview.widget.CardView android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:elevation="10dp"
    app:cardCornerRadius="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/text_view_address_street_name"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:text="Street Name"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/text_view_address_house_number"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:text="House no."
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/text_view_address_street_name"
            />
        <TextView
            android:id="@+id/text_view_address_city"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:text="City"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/text_view_address_house_number"
            />
        <TextView
            android:id="@+id/text_view_address_pincode"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:text="Pincode"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/text_view_address_city"
            />
        <TextView
            android:id="@+id/text_view_address_type"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:text="Type"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/text_view_address_pincode"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:gravity="center"
            android:textColor="@color/red"
            android:id="@+id/text_view_delete_address"
            android:layout_below="@id/text_view_address_type"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:gravity="center"
            android:textColor="@color/red"
            android:id="@+id/text_view_edit_address"
            android:layout_below="@id/text_view_address_type"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/text_view_delete_address"
            android:layout_marginLeft="50dp"
            />

        <RadioButton
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/button_choose_address"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
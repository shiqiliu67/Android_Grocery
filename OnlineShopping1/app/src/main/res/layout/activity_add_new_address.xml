<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/app_bar"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:hintTextColor="@color/green"
        app:errorTextColor="@color/red"
        android:id="@+id/text_input_layout2">
    <EditText
        android:id="@+id/edit_text_address_street_name"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:hint="Street Name"
        android:textSize="25dp"
        android:background="@drawable/edit_text_address"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/green"
        app:errorTextColor="@color/red"
        android:id="@+id/text_input_layout3">
    <EditText
        android:id="@+id/edit_text_address_floor"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:hint="Apt/Suite/Floor"
        android:textSize="25dp"
        android:background="@drawable/edit_text_address"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/green"
        app:errorTextColor="@color/red"
        android:id="@+id/text_input_layout4">
    <EditText
        android:id="@+id/edit_text_address_city"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:hint="City"
        android:textSize="25dp"
        android:background="@drawable/edit_text_address"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/green"
        app:errorTextColor="@color/red"
        android:id="@+id/text_input_layout5">
    <EditText
        android:id="@+id/edit_text_address_pincode"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:hint="Pincode"
        android:textSize="25dp"
        android:background="@drawable/edit_text_address"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/green"
        app:errorTextColor="@color/red"
        android:id="@+id/text_input_layout6">
    <EditText
        android:id="@+id/edit_text_address_type"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:hint="Type"
        android:textSize="25dp"
        android:background="@drawable/edit_text_address"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_marginTop="130dp"
        android:layout_below="@+id/edit_text_address_city"
        android:id="@+id/button_save_address"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Save Address" />

</LinearLayout>
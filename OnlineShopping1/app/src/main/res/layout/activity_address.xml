<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/app_bar"/>
    <Button
        android:layout_below="@+id/toolbar"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_new_address"
        android:text="Add New Address"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_add_location_24"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/button_add_new_address"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:id="@+id/recycler_view_address"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/recycler_view_address"
        android:text="Continue"
        android:id="@+id/button_continue_address"/>

</RelativeLayout>